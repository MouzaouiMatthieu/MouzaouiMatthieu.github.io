---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Page d'accueil -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Pages statiques (filter pour exclure les fichiers non-HTML) -->
  {% for page in site.pages %}
    {% unless page.url contains "404" 
      or page.url contains "google" 
      or page.url contains ".xml" 
      or page.url contains ".json" 
      or page.url contains ".css" 
      or page.url contains ".js" 
      or page.url contains ".txt" 
      or page.url contains ".pdf" 
      or page.url contains "/assets/" 
      or page.url contains "/feed" 
      or page.url contains "/sitemap"
    %}
    {% unless page.url == "/" %}
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page.url }}</loc>
        {% if page.last_modified_at %}
          <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
        {% elsif page.date %}
          <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
        {% else %}
          <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
      </url>
    {% endunless %}
    {% endunless %}
  {% endfor %}
  
  <!-- Posts de blog -->
  {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ post.url }}</loc>
      {% if post.last_modified_at %}
        <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
  {% endfor %}
  
  <!-- Enseignement -->
  {% for teaching in site.teaching %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ teaching.url }}</loc>
      {% if teaching.last_modified_at %}
        <lastmod>{{ teaching.last_modified_at | date_to_xmlschema }}</lastmod>
      {% elsif teaching.date %}
        <lastmod>{{ teaching.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>yearly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}
  
  <!-- Publications -->
  {% for publication in site.publications %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ publication.url }}</loc>
      {% if publication.last_modified_at %}
        <lastmod>{{ publication.last_modified_at | date_to_xmlschema }}</lastmod>
      {% elsif publication.date %}
        <lastmod>{{ publication.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>yearly</changefreq>
      <priority>0.9</priority>
    </url>
  {% endfor %}
  
  <!-- Talks/PrÃ©sentations -->
  {% for talk in site.talks %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ talk.url }}</loc>
      {% if talk.last_modified_at %}
        <lastmod>{{ talk.last_modified_at | date_to_xmlschema }}</lastmod>
      {% elsif talk.date %}
        <lastmod>{{ talk.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>yearly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}
  
  <!-- Notes -->
  {% for note in site.notes %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ note.url }}</loc>
      {% if note.last_modified_at %}
        <lastmod>{{ note.last_modified_at | date_to_xmlschema }}</lastmod>
      {% elsif note.date %}
        <lastmod>{{ note.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>monthly</changefreq>
      <priority>0.5</priority>
    </url>
  {% endfor %}
</urlset>